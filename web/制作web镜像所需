
docker build -t aodadou/fire-web:1.0 .

docker run -d --name web --net fire -p 80:80 aodadou/fire-web:1.0

、、、、、、、、、、、以下不需要

mkdir ~/fire_docker/nginx
mkdir ~/fire_docker/nginx/conf.d
touch ~/fire_docker/nginx/conf.d/nginx.conf

docker run -d --name web --net fire -v ~/fire_docker/nginx/conf.d:/etc/nginx/conf.d -p 82:80 nginx:latest


docker build -t fire-web:1.0 .

docker run -d --name web --net fire -p 83:80 fire-web:1.0

nginx容器   /etc/nginx 存放配置   /usr/share/nginx 存放包

docker exec nginx容器名  nginx -s reload  



